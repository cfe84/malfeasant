# Environment Configuration
PORT=3000
NODE_ENV=development

# Static Content Configuration
HONEYPOT_STATIC_DIR=./public
BLOG_STATIC_DIR=./blog
BLOG_ROUTE_PREFIX=/blog

# Database Configuration
# Use 'sqlite' for local development or 'postgres' for production
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=honeypot_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password
# SQLite database file path (used when DB_TYPE=sqlite)
SQLITE_DB_PATH=./honeypot.db

# Rate Limiting Configuration in seconds
RATE_LIMIT_SHORT_WINDOW=60
RATE_LIMIT_SHORT_MAX=10

# Security Configuration
REDIRECT_URL=https://example.com/blocked
HONEYPOT_SECRET=your_secret_key_here
API_SECRET=honeypot_api_secret_12345

# Known Agents Refresh Interval (in seconds)
KNOWN_AGENTS_REFRESH_INTERVAL=60

# HTTP Server Configuration
FAKE_SERVER_HEADER=Apache-Coyote/1.1
CUSTOM_404_PAGE=404.html
